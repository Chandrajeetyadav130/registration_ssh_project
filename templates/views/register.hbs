<body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12 col-12 bg-info">
        {{>nav}}

      </div>

    </div>

  </div>
    
  <div class="container-fluid">
      <div class="row">
        
          <div class="col-lg-6 col-md-6 mx-auto mb-5 bg-info link mt-5">
                     <form  action="/register"method="POST">
                     <div class="mb-3 mt-2 d-flex justify-content-center align-items-center"><p>Please register your details</p></div>
                     
                    <div class=" mb-3 mt-2">
                        <input type="text" class="form-control" id="first_name" placeholder="Enter your first name"  value="" required name="firstname">
                    
                    </div>
                    <div class="mb-3">
                        <input type="text" class="form-control" id="last_name" placeholder="Enter your last name"  value=""  required name="lastname">
                    
                    </div>
                     <div class="mb-3">
                        <input type="email" class="form-control" id="email_id" placeholder="Enter your email id"  value=""  required name="email">
                      
                    </div>
                     <div class="mb-3">
                       <input class="form-check-input" type="radio" required name="gender"  value="male" id="flexRadioDefault1"><span>male</span>
                              <input class="form-check-input" type="radio" required name="gender" value="female" id="flexRadioDefault1"><span>female</span>
                    
                    </div>
                     <div class="mb-3">
                        <input type="number" class="form-control" id="phone_no" placeholder="Enter your phone number" value=""  required name="phone">
                    
                    </div>
                     <div class="mb-3">
                        <input type="number" class="form-control" id="age_id" placeholder="Enter your age" value="" required name="age">
                    
                    </div>
                     <div class="mb-3">
                        <input type="password" class="form-control" id="password_id" placeholder="Enter your password" value="" required name="password">
                    
                    </div>
                     <div class="mb-3">
                        <input type="password" class="form-control" id="cpassword_id" placeholder="Enter your password again" value="" required name="confirmpassword">
                    
                    </div>
                   
                    
                    <input  type="submit" class=" reg_btn btn btn-primary">
                    </form>
         

          </div>

      </div>

  </div>
